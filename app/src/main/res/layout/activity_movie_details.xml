<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailsActivity">

    <TextView
        android:id="@+id/tv_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/titleBackground"
        android:padding="@dimen/big_padding"
        android:text="@string/place_holder"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_detail_poster"
        android:layout_width="190dp"
        android:layout_height="300dp"
        android:padding="@dimen/small_padding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_title"
        android:contentDescription="@string/movie_poster_image" />


    <TextView
        android:id="@+id/tv_detail_release_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_padding"
        android:text="@string/place_holder"
        android:textSize="@dimen/title_size"
        app:layout_constraintLeft_toRightOf="@id/iv_detail_poster"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_title" />


    <TextView
        android:id="@+id/tv_detail_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_padding"
        android:text="@string/place_holder"
        android:textSize="@dimen/title_size"
        app:layout_constraintLeft_toRightOf="@id/iv_detail_poster"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_release_year" />

    <TextView
        android:id="@+id/overview_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_padding"
        android:text="@string/overview"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/title_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_detail_poster" />

    <TextView
        android:id="@+id/tv_detail_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_padding"
        android:text="@string/place_holder"
        android:textSize="@dimen/detail_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/overview_heading" />


</android.support.constraint.ConstraintLayout>